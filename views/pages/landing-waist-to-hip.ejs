<% include ../partials/header %>

<div class="jumbotron">
    <h1>Waist to hip - Calculator</h1>
    <p>With this tool you can easily determine your Waist to hip ratio.</p>
</div>

<form method="GET" class="form-horizontal" action="/result-waist-to-hip">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Please enter your details!</h3>
        </div>
        <div class="panel-body">
            <div class="form-group">
                <label for="gender" class="col-sm-2 control-label">
                    Gender
                </label>
                <div class="col-sm-10">
                    <select name="gender" id="gender" class="form-control">
                        <option value="Female" selected="selected">Female</option>
                        <option value="Male">Male</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label for="waist" class="col-sm-2 control-label">
                    You waist circumference (cm)
                </label>
                <div class="col-sm-10">
                    <input name="waist" type="number" class="form-control" id="waist" />
                </div>
            </div>
            <div class="form-group">
                <label for="hip" class="col-sm-2 control-label">
                    You hip circumference (cm)
                </label>
                <div class="col-sm-10">
                    <input name="hip" type="number" class="form-control" id="hip" />
                </div>
            </div>
        </div>
        <div class="panel-footer">
            <input type="submit" class="btn btn-primary" value="Send!" />
        </div>
    </div>
</form>

<% include ../partials/footer %>